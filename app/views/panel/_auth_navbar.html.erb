<div class="dropdown is-hoverable pop-right p-3 background-grey-dark">
  <div class="dropdown-trigger">
    <div class="is-several">
    <% if current_user %>
      <%= image_tag current_user.avatar, class: 'image is-32x32' if current_user.avatar.present? %>
      <span><%= current_user.name %></span>
    <% end %>
    </div>
  </div>
  <div class="dropdown-menu" style="bottom: 0">
    <div class="dropdown-content">
      <%= link_to({ controller: '/board/home' }, class: 'dropdown-item') do %>
        <span><%= t('board.home.index.title') %></span>
      <% end %>
      <%= link_to({ controller: '/panel/home' }, class: 'dropdown-item') do %>
        <span><%= t('panel.home.index.title') %></span>
      <% end %>
      <%= button_to({ controller: '/auth/sessions', action: 'destroy' }, method: :delete, data: { turbo_confirm: '确认退出' }, form: { class: 'dropdown-item' }) do %>
        <span><%= t('auth.sessions.destroy.title') %></span>
      <% end %>
    </div>
  </div>
</div>
