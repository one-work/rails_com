<%=
  tr_tag(
    model,
    data: {
      controller: 'tree',
      depth: model.depth_str,
      tree_target: 'item'
    },
    style: "display: #{display}"
  ) { yield }
%>
<% model.children.each do |child| %>
  <%= render partial: 'index_tbody', layout: 'index_tree_tr', locals: { model: child, display: 'none' } %>
<% end %>
