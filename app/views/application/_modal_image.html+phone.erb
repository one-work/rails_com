<div id="modal" data-controller="modal" class="modal is-mobile is-active">
  <div data-action="click->modal#close" class="modal-background has-animate-fade-in"></div>
  <div class="has-animate-slide-up px-7">
    <%= yield %>
    <button type="button" data-action="modal#close" class="button is-borderless">
      <%= svg_tag 'xmark' %>
    </button>
  </div>
</div>
