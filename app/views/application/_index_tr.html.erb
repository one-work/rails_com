<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <% if params[:debug_mode] %>
    <td><%= model.id %></td>
  <% end %>
  <%= yield %>
  <td class="text-centered">
    <%= render partial: 'index_tr_actions', locals: { model: model } %>
  </td>
</tr>
