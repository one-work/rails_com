<turbo-frame id="modal" data-controller="modal" class="modal is-active">
  <div class="modal-background has-animate-fade-in"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title"><%= t('.title') %></p>
      <button type="button" data-action="modal#close" class="delete"></button>
    </header>
    <section class="modal-card-body">
      <%= yield %>
    </section>
    <footer class="modal-card-foot justify-content-center">
      <%= link_to({ action: 'edit' }, class: 'button is-borderless') do %>
        <%= svg_tag 'pencil' %>
        <span class="ml-1 text-grey"><%= t('.edit.title') %></span>
      <% end %>
    </footer>
  </div>
</turbo-frame>
