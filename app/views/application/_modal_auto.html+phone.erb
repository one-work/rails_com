<div id="modal" data-controller="modal" class="modal is-mobile is-mobile-top is-active">
  <div class="modal-background has-animate-color"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <i style="width: 1.25rem"></i>
      <p class="modal-card-title"><%= t('.title') %></p>
      <button type="button" data-action="modal#close" class="delete"></button>
    </header>
    <section class="modal-card-body">
      <%= yield %>
    </section>
    <%= render 'modal_foot' %>
  </div>
</div>
