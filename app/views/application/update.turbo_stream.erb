<% if referer_eql?(controller_path, 'index') %>
  <%= turbo_stream.replace "tr_#{params[:id]}", partial: 'index_tbody', layout: 'index_tr', locals: { model: defined?(model) ? model : instance_variable_get("@#{model_name}") } %>
  <%= turbo_stream.remove 'modal' %>
<% elsif referer_eql?(controller_path, 'edit') %>
  <%= turbo_stream.append 'body', partial: 'visit', locals: { url: url_for(action: 'show') } %>
<% elsif referer_eql?(controller_path, 'show') %>
  <%= turbo_stream.update 'box', partial: 'show', locals: { model: defined?(model) ? model : instance_variable_get("@#{model_name}") } %>
  <%= turbo_stream.remove 'modal' %>
<% else %>
  <%= turbo_stream.append 'body', partial: 'visit' %>
<% end %>
