<div class="as-bar">
  <% if current_state %>
    <%= link_to(current_state.prev_path, text: true, class: 'px-4') do %>
      <%= svg_tag 'angle-left', kind: 'regular' %>
    <% end %>
  <% elsif tab_item_items.exclude?(request.path) %>
    <%= link_to({ controller: '/home' }, class: 'px-4') do %>
      <%= svg_tag 'angle-left', kind: 'regular' %>
    <% end %>
  <% else %>
    <i class="px-5"></i>
  <% end %>
  <div class="bar-title"><%= t('.title', default: '') %></div>
  <% if params[:action] == 'show' %>
    <%= button_to({ action: 'actions' }, class: 'px-4') do %>
      <%= svg_tag 'ellipsis-vertical' %>
    <% end %>
  <% else %>
    <i class="px-5"></i>
  <% end %>
</div>
