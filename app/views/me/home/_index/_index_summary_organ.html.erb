<div class="box is-padding-less">
  <div class="box-header">
    <span class="has-border-left-primary size-7">今日营收</span>
  </div>
  <div class="fixed-grid has-2-cols p-3">
    <div class="grid">
      <%= link_to({ controller: 'trade/admin/orders' }, class: 'cell has-column-centered') do %>
        <strong class="size-5"><%= current_organ.counters['amount'].to_money.format.html_safe %></strong>
        <p class="size-7 text-grey">营业额</p>
      <% end %>
      <%= link_to({ controller: 'trade/admin/orders' }, class: 'cell has-column-centered') do %>
        <strong class="size-5"><%= current_organ.counters['count'].to_i %></strong>
        <p class="size-7 text-grey">单数</p>
      <% end %>
    </div>
  </div>
</div>