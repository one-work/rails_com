<% if defined?(current_organ) && current_member %>
  <%= render 'profile_item' %>
<% elsif current_user %>
  <%= render 'my/profile_item' %>
<% end %>

<div class="box is-padding-less">
  <div class="box-header">
    <span class="has-border-left-primary size-7">今日营收</span>
  </div>
</div>

<div class="box is-padding-less">
  <div class="box-header">
    <span class="has-border-left-primary size-7">基础功能</span>
    <%= link_to({ controller: 'admin/home' }) do %>
      <%= svg_tag 'up-right-and-down-left-from-center' %>
      <span class="size-7 ml-1">更多功能</span>
    <% end %>
  </div>
  <div class="fixed-grid has-3-cols is-shadow p-3">
    <div class="grid">
      <%= render 'crm_nav' if defined? RailsCrm %>
      <%= render 'factory_nav' if defined? RailsFactory %>
      <%= render 'trade_nav' if defined? RailsTrade %>
      <%# render 'bench_nav' if defined? RailsBench %>
      <%# render 'finance_nav' if defined? RailsFinance %>
      <%# render 'space_nav' if defined? RailsSpace %>
      <%# render 'printer_nav' %>
    </div>
  </div>
</div>

<div class="box is-padding-less">
  <div class="box-header">
    <span class="has-border-left-primary size-7">门店管理</span>
  </div>
  <div class="fixed-grid has-3-cols is-shadow p-3">
    <div class="grid">
      <%= link_to({ controller: 'factory/productions' }, class: 'cell has-column-centered') do %>
        <div class="text-primary">
          <%= svg_tag 'up-right-and-down-left-from-center', class: 'icon is-medium' %>
        </div>
        <span class="size-7 text-grey mt-1">门店预览</span>
      <% end %>
      <%= link_to({ controller: 'factory/admin/organs', action: 'show' }, class: 'cell has-column-centered') do %>
        <div class="text-primary">
          <%= svg_tag 'shop', class: 'icon is-medium' %>
        </div>
        <span class="size-7 text-grey mt-1">门店设置</span>
      <% end %>
      <% if RailsBluetooth %>
        <%= render 'bluetooth_nav' %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'powered_by' %>
