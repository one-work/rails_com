<div class="dropdown is-hoverable pop-right pop-right-bottom is-fullwidth">
  <div class="dropdown-trigger">
    <% if current_user.avatar.present? %>
      <%= image_tag current_user.avatar, class: 'image is-32x32 mx-auto' %>
    <% else %>
      <%= image_tag 'avatar.png', class: 'image is-64x64 mx-auto' %>
    <% end %>
  </div>
  <div class="dropdown-menu">
    <div class="dropdown-content">
      <%= link_to({ controller: '/board/home' }, class: 'dropdown-item') do %>
        <span><%= t('board.home.index.title') %></span>
      <% end %>
      <%= link_to({ controller: '/auth/sessions', action: 'destroy' }, data: { turbo_confirm: '确认退出' }, class: 'dropdown-item') do %>
        <span><%= t('auth.sessions.destroy.title') %></span>
      <% end %>
    </div>
  </div>
</div>
