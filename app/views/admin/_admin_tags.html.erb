<% if role_permit?(business: model.identifier, namespace: 'admin') %>
<div id="<%= model.identifier %>_admin" class="media">
  <figure class="media-left text-link">
    <%= svg_tag model.svg_icon, kind: 'duotone', class: 'image is-64x64' %>
  </figure>
  <div class="media-content">
    <div class="content">
      <strong><%= t("#{model.identifier}.admin.title") %></strong>
    </div>
    <div class="field is-grouped is-grouped-multiline">
    <% model.admin_actions.each do |action| %>
      <div id="<%= "#{action.controller_path}/#{action.action_name}" %>" class="control">
        <div class="tags has-addons">
          <%= link_to({ controller: action.controller_path, action: action.action_name }, class: 'tag') do %>
            <span><%= action.name %></span>
          <% end %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
<% end %>