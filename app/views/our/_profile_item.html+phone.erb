<%= link_to({ controller: 'auth/our/home' }, text: true, class: 'media') do %>
  <div class="media-left">
  <% if current_client.organ.logo.attached? %>
    <%= image_tag current_client.organ.logo, class: 'image is-64x64 is-radius' %>
  <% else %>
    <%= svg_tag 'building-user', kind: 'duotone', class: 'image is-64x64 is-radius' %>
  <% end %>
  </div>
  <div class="media-content">
    <p>
      <span><%= current_client.organ.name %></span>
      <span class="tag">公司</span>
    </p>
    <p class="text-grey">
      <span><%= current_client.name %></span>
    </p>
  </div>
  <div class="media-right text-grey">
    <%= svg_tag 'qrcode' %>
    <%= svg_tag 'chevron-right', class: 'icon is-small ml-1' %>
  </div>
<% end %>
