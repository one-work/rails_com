<% if extra_columns.present? %>
<div id="popup" data-controller="popup">
  <button data-action="popup#open" class="button">
    <span class="icon">
      <%= svg_tag 'plus' %>
    </span>
  </button>
  <div data-popup-target="overlay" data-action="click->popup#hidden" class="overlay display-none"></div>
  <div data-popup-target="menu" class="panel is-light as-popdown background-white overflow-y-hidden display-none">
  <% extra_columns.each do |column| %>
    <%= button_to({ controller: 'com/filters', action: 'column' }, params: column.except(:title), form: { class: 'panel-block' }) do %>
      <span><%= column[:title] %></span>
    <% end %>
  <% end %>
  </div>
</div>
<% end %>