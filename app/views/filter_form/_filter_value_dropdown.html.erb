<div class="dropdown is-hoverable is-left">
  <div class="dropdown-trigger">
    <button class="button radius-right-none">
      <span><%= record_class.human_attribute_name(key) %></span>
      <%= svg_tag 'angle-down' %>
    </button>
  </div>
  <div class="dropdown-menu">
    <div class="dropdown-content">
    <% record_class.options_i18n(key).each do |text, value| %>
      <%= link_to text, filter_params(key => value), class: active_helper(key => value, active: 'dropdown-item is-active', item: 'dropdown-item') %>
    <% end %>
    </div>
  </div>
</div>
<div class="tag is-primary radius-none"><%= value %></div>
<%= link_to({ **request.GET.except(key, "#{key}-gte", "#{key}-lte") }, class: 'tag is-primary as-attached-right') do %>
  <i class="delete"></i>
<% end %>
