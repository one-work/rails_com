<div class="field-body">
  <div class="field">
    <%=
      datetime_field_tag(
        params[:scope].present? ? "#{params[:scope]}[#{params[:column_name]}-gte]" : "#{params[:column_name]}-gte",
        params.fetch('value', {})['gte'],
        placeholder: "请输入#{@record_class.human_attribute_name(params[:column_name])}",
        data: { action: 'filter-input#confirm' },
        class: 'input',
        id: nil,
        form: 'filter_search_form'
      )
    %>
  </div>
  <div class="field">
    <%=
      datetime_field_tag(
        params[:scope].present? ? "#{params[:scope]}[#{params[:column_name]}-lte]" : "#{params[:column_name]}-lte",
        params.fetch('value', {})['lte'],
        placeholder: "请输入#{@record_class.human_attribute_name(params[:column_name])}",
        data: { action: 'filter-input#confirm' },
        class: 'input',
        id: nil,
        form: 'filter_search_form'
      )
    %>
  </div>
  <div class="field">
    <%= submit_tag '确认', name: nil, data: { action: 'filter-input#submitButton', item: ["#{params[:column_name]}-gte", "#{params[:column_name]}-lte"].join(',') }, class: 'button', form: 'filter_search_form' %>
  </div>
</div>
