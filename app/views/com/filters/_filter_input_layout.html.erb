<div data-action="click->popup#close" class="overlay"></div>
<div data-controller="filter-input" data-popup-target="popup" class="panel is-light as-popdown background-white overflow-y-hidden">
  <% params[:extra].each do |key, value| %>
    <%= hidden_field_tag(params[:scope].present? ? "#{params[:scope]}[#{key}]" : key, value, autocomplete: 'off', form: 'filter_search_form') %>
  <% end if params[:extra].is_a?(ActionController::Parameters) %>
  <div class="panel-heading"><%= @record_class.human_attribute_name(params[:column_name]) %></div>
  <div class="panel-block">
    <%= yield %>
  </div>
</div>