<tr id="tr_<%= meta_controller.id %>">
  <td><%= meta_controller.namespace_identifier %></td>
  <td>
    <%= button_to({ action: 'move_higher', id: meta_controller.id }, method: :patch, class: 'text-grey-lighter') do %>
      <%= svg_tag 'arrow-up' %>
    <% end %>
    <%= button_to({ action: 'move_lower', id: meta_controller.id }, method: :patch, class: 'text-grey-lighter') do %>
      <%= svg_tag 'arrow-down' %>
    <% end %>
    <span aria-label="<%= meta_controller.identifier %>"><%= meta_controller.name %></span>
    <%= link_to({ action: 'edit', id: meta_controller.id }, aria: { label: t('.edit.title') }, class: 'text-grey-lighter') do %>
      <%= svg_tag 'pencil' %>
    <% end %>
  </td>
  <td>
    <% meta_controller.meta_actions.each do |meta_action| %>
      <div>
        <span aria-label="<%= meta_action.action_name %>"><%= meta_action.name %></span>
        <%= link_to({ controller: 'meta_actions', action: 'edit', meta_controller_id: meta_controller.id, id: meta_action.id }, id: "roles_#{meta_action.id}", class: 'text-grey-lighter') do %>
          <%= svg_tag 'users' %>
        <% end %>
        <%= link_to({ controller: 'meta_actions', action: 'edit', meta_controller_id: meta_controller.id, id: meta_action.id }, aria: { label: t('.edit.title') }, class: 'text-grey-lighter') do %>
          <%= svg_tag 'pencil' %>
        <% end %>
      </div>
    <% end %>
  </td>
</tr>
