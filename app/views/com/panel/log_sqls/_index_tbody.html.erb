<td><%= model.name %></td>
<td>
<%= link_to({ action: 'show', id: model.id }, class: 'size-7') do %>
  <p><%= model.sql %></p>
<% end %>
</td>
<td>
  <span><%= model.duration %></span>
  <span class="size-7 text-grey">ms</span>
</td>
<td>
  <p class="text-grey"><time data-controller="time" data-format="human"><%= model.created_at.iso8601(6) %></time></p>
</td>
<td>
  <div data-show-target="item" class="visibility-hidden">
    <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, data: { turbo_confirm: t('.destroy.confirm') }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'trash', class: 'icon text-danger' %>
    <% end %>
  </div>
</td>