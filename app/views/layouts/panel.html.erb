<%= render layout: 'layouts/admin_head' do %>
  <main class="columns as-main">
    <div class="column is-narrow p-0 has-page">
      <%= render 'nav' %>
      <%= render 'menu_bar' %>
    </div>
    <turbo-frame id="panel" data-turbo-action="advance" class="column as-body">
      <div class="loading">loading...</div>
      <ul class="breadcrumb has-succeeds-separator ml-3"><%= render 'breadcrumb' %></ul>
      <%= render 'alert' %>
      <div class="box flex-grow-1 radius-bottom-none">
        <%= yield %>
      </div>
    </turbo-frame>
  </main>
<% end %>
