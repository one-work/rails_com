<%= render layout: 'layouts/application_head' do %>
  <%= render 'nav_bar' %>
  <%= render 'alert' %>
  <turbo-frame id="main" refresh="morph" data-turbo-action="advance">
    <main class="columns container">
      <div class="column is-narrow" style="width: 260px;">
        <%= render 'nav' %>
      </div>
      <turbo-frame id="body" refresh="morph" data-turbo-action="advance" class="column">
        <ul class="breadcrumb has-succeeds-separator"><%= render 'breadcrumb' %></ul>
        <%= yield %>
      </turbo-frame>
    </main>
  </turbo-frame>
  <%= render 'footer' %>
<% end %>
