<%= turbo_stream.replace @business.tr_id, partial: 'show_business', locals: { meta_business: @business, expand: true } %>
<% if params[:expand].present? %>
  <% @business.meta_namespaces.each do |meta_namespace| %>
    <%= turbo_stream.replace meta_namespace.tr_id(@business.identifier), partial: 'show_namespace', locals: { meta_namespace: meta_namespace, business_identifier: @business.identifier, hide: true } %>
  <% end %>
<% else %>
  <%=
    turbo_stream.after(
      @business.tr_id,
      partial: 'show_namespace',
      collection: @business.meta_namespaces,
      as: :meta_namespace,
      locals: { business_identifier: @business.identifier }
    )
  %>
<% end %>
