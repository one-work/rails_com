<%=
  turbo_stream.replace(
    @namespace.tr_id(params[:business_identifier]),
    partial: 'show_namespace',
    locals: { meta_namespace: @namespace, business_identifier: params[:business_identifier], expand: true }
  )
%>
<% if params[:expand].present? %>
  <% @controllers.each do |meta_controller| %>
    <%= turbo_stream.replace "tr_#{meta_controller.identifier}", partial: 'show_controller', locals: { meta_controller: meta_controller, hide: true } %>
  <% end %>
<% else %>
  <%= turbo_stream.after @namespace.tr_id(params[:business_identifier]), partial: 'show_controller', collection: @controllers, as: :meta_controller %>
<% end %>
