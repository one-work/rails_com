<td>
  <p><%= link_to model.name, { controller: 'role_whos', role_id: model.id } %></p>
  <p class="text-grey"><%= model.tip %></p>
</td>
<td><%= model.description %></td>
<td>
  <%= form_with theme: 'switch', model: model, scope: :role, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :visible, data: { action: 'input#submit' }, id: nil %>
  <% end %>
</td>
<td>
  <%= form_with theme: 'switch', model: model, scope: :role, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :default, data: { action: 'input#submit' }, id: nil %>
  <% end %>
</td>
<td>
<% model.role_types.each do |role_type| %>
  <span class="tag"><%= role_type.who_type_i18n %></span>
<% end %>
</td>
