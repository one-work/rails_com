<%= render 'meta_tab' %>
<%= render 'index_bar' %>
<%= render 'index_actions' %>

<%= render layout: 'index_table_without_striped' do %>
  <% @records.group_by(&:business_identifier).each do |business_identifier, meta_models| %>
    <%= render partial: 'business_tbody', locals: { business_identifier: business_identifier, size: meta_models.size + 1 } %>
    <%= render partial: 'index_tbody', layout: 'index_tr', collection: meta_models, as: :model %>
  <% end %>
<% end %>

<%= paginate @records %>
